<style>
    .sk-flow{
        width: 100%;
        height: 100%;
        background-color: #fcf8e3;
        margin: 35px;
    }

    /*块*/
    .sk-flow-panel{
        top: 50px;
        position: absolute;
        width: 30%;
        height: 100%;
        display: inline-block;
    }

    /*矩形框*/
    .sk-flow-rect{
        border: 1px solid #000;
        width: 120px;
        height: 50px;
        line-height: 50px;
        text-align: center;
    }

    /*箭头*/
    .sk-flow-arrow{
        border: none;
        width: 120px;
        height: 20px;
        background: url("node_modules/seek-plugin-flow/arrow-down.png") no-repeat center;
        background-size: 20px 20px;
        text-align: right;
    }

    /*折线*/
    .sk-flow-polyline{
        border: 1px solid #000;
        border-right: none;
        width: 100px;
        height: 500px;
        line-height: 500px;
        display: inline-block;
        float: right;
        text-align: left;
        margin-top: 170px;
    }

    .sk-flow-subItem{

    }

    .sk-flow-arrow-right{
        position: absolute;
        left: 180px;
        top: 380px;
    }

    .diamond {
        display: inline-block;
        position: relative;
        font-size: 0;
        margin-top: -7px;

    }
    .diamond span{
        position: absolute;
        display: inline-block;
        width: 140px;
        height: 60px;
        line-height: 60px;
        text-align: center;
        top: 0;
        left: 0;
        z-index: 99;
        font-size: 14px;
    }

    .diamond b,
    .diamond i{
        display: inline-block;
        position: relative;
    }
    .diamond b{
        width: 0;
        height: 0;
        border-top: 30px solid transparent;
        border-right: 70px solid #000;
        border-bottom: 30px solid transparent;
    }
    .diamond i{
        width: 0;
        height: 0;
        border-top: 30px solid transparent;
        border-left: 70px solid #000;
        border-bottom: 30px solid transparent;
    }
    .diamond b::before,
    .diamond i::before{
        content: "";
        display: inline-block;
        width: 0;
        height: 0;
        position: absolute;
    }

    .diamond b::before{
        border-top: 29px solid transparent;
        border-right: 68px solid #FCFCFC;
        border-bottom: 29px solid transparent;
        top: -29px;
        left: 2px;
    }
    .diamond i::before{
        border-top: 29px solid transparent;
        border-left: 68px solid #FCFCFC;
        border-bottom: 29px solid transparent;
        top: -29px;
        right: 2px;
    }

</style>

<template>
    <!--箭头符号: ⇦ ⇧ ⇨ ⇩-->
    <div class="sk-flow">
        <div class="sk-flow-panel" style="left: 3%;">
            <div class="sk-flow-polyline">Y</div>
        </div>
        <ul class="sk-flow-panel" style="left:33%;">
            {foreach src=this.data}

                {if item.type=="rhombus"}
                    <li><div class="diamond"><b></b><span>{item.text}</span><i></i></div></li>
                {else}
                    <li class="sk-flow-rect">{item.text}</li>
                {/if}

                {if !src.last}
                    {if item.type=="rhombus"}
                        <li class="sk-flow-arrow">N</li>
                    {else}
                        <li class="sk-flow-arrow"></li>
                    {/if}
                {/if}
            {/foreach}
            <li class="sk-flow-arrow-right">⇨</li>
            <li class="sk-flow-arrow-right" style="top: 590px">⇨</li>
        </ul>
        <div class="sk-flow-panel" style="left:63%;">
            <ul class="sk-flow-subItem" style="margin-top: 285px;">
                {foreach src=this.data[5].items}
                    <li class="sk-flow-rect">{item.text}</li>
                    {if !src.last}
                        <li class="sk-flow-arrow"></li>
                    {/if}
                {/foreach}
            </ul>
            <ul class="sk-flow-subItem" style="margin-top: 20px;">
                {foreach src=this.data[8].items}
                    <li class="sk-flow-rect">{item.text}</li>
                    {if !src.last}
                        <li class="sk-flow-arrow"></li>
                    {/if}
                {/foreach}
            </ul>
        </div>
    </div>
</template>

